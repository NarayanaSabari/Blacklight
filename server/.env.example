## Development / Production env example for Blacklight backend
# Copy this file to `server/.env` and update values before running.

# Flask / App
ENVIRONMENT=production
PORT=8080
SECRET_KEY=change-me-secret

# Database - set to your externally managed DB (no DB service in compose)
DATABASE_URL=postgresql+psycopg2://<db_user>:<db_pass>@<db_host>:<db_port>/<db_name>

# Redis (used for caches/side-effects) - if you don't want internal redis, set externally.
REDIS_URL=redis://redis:6379/0

# Mail
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your@user.com
SMTP_PASSWORD=password
SMTP_FROM=Blacklight <no-reply@example.com>

# External frontend configs (optional override)
FRONTEND_URL=http://localhost:3000
CENTRALD_URL=http://localhost:3001
# Flask Configuration
FLASK_APP=wsgi.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=CHANGE_ME

# Database Configuration
DATABASE_URL=postgresql://USER:PASSWORD@localhost:5432/blacklight
SQLALCHEMY_ECHO=False
SQLALCHEMY_TRACK_MODIFICATIONS=False
SQLALCHEMY_ENGINE_OPTIONS_POOL_SIZE=10
SQLALCHEMY_ENGINE_OPTIONS_POOL_RECYCLE=3600
SQLALCHEMY_ENGINE_OPTIONS_POOL_PRE_PING=True

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_URL=redis://localhost:6379/1

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGINS=*
CORS_ALLOW_HEADERS=*
CORS_EXPOSE_HEADERS=*
CORS_SUPPORTS_CREDENTIALS=True

# Server Configuration
HOST=0.0.0.0
PORT=5000
WORKERS=4
WORKER_CLASS=sync
WORKER_CONNECTIONS=1000

# Security
ALLOWED_HOSTS=localhost,127.0.0.1
SECURE_HEADERS=True

# Environment
ENVIRONMENT=development

# Resume Parsing Configuration
AI_PARSING_PROVIDER=gemini

# Google Gemini API Keys
GEMINI_API_KEY=YOUR_GEMINI_API_KEY
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY
GEMINI_EMBEDDING_MODEL=gemini-embedding-001
GEMINI_EMBEDDING_DIMENSION=768

# Gemini Model Options: gemini-pro, gemini-1.5-pro, gemini-1.5-flash, gemini-2.5-flash
GEMINI_MODEL=gemini-2.5-flash

# Google Cloud Storage (for production)
STORAGE_BACKEND=gcs
GCS_BUCKET_NAME=your_bucket_name
GCS_PROJECT_ID=your_project_id
GCS_CREDENTIALS_PATH=/path/to/credentials.json
# Or inline JSON:
# GCS_CREDENTIALS_JSON={"type": "service_account", ...}
SIGNED_URL_EXPIRY_SECONDS=3600

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,jpg,jpeg,png

# File Upload Configuration
RESUME_UPLOAD_MAX_SIZE_MB=10
RESUME_ALLOWED_EXTENSIONS=pdf,docx
RESUME_STORAGE_PATH=uploads/resumes

# SMTP Configuration
SMTP_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=your_email@example.com
SMTP_FROM_NAME=BlackLight Company HR

# Frontend
FRONTEND_BASE_URL=http://localhost:5174

# Inngest Configuration
INNGEST_EVENT_KEY=
INNGEST_SIGNING_KEY=